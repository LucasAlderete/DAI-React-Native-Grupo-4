{
  "expo": {
    "name": "ritmo-fit-react-native",
    "slug": "ritmo-fit-react-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gonzaloacosta.ritmofitreactnative",
      "infoPlist": {
        "NSCameraUsageDescription": "Necesitamos acceso a la c치mara para escanear c칩digos QR de check-in en el gimnasio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.gonzaloacosta.ritmofitreactnative",
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "80c45c07-770b-485b-8953-9f330b78488e"
      }
    },
    "plugins": [
      "expo-background-task",
      [
        "expo-camera",
        {
          "cameraPermission": "Necesitamos acceso a la c치mara para escanear c칩digos QR de check-in."
        }
      ]
    ]
  }
}
